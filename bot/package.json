{
  "name": "drbot",
  "version": "0.0.1",
  "description": "Discord music bot for local files",
  "type": "module",
  "author": "Dr. Kevin",
  "license": "GPL-3.0+",
  "private": true,
  "engines": {
    "node": ">= 20.9"
  },
  "scripts": {
    "start": "node build/src/main.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "tsc && tsc-alias",
    "build:watch": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")",
    "build:release": "npm run clean && tsc -p tsconfig.release.json && tsc-alias -p tsconfig.release.json",
    "lint": "eslint . --ext .ts --ext .mts",
    "test": "jest --coverage",
    "prettier": "prettier --config .prettierrc.json --write .",
    "test:watch": "jest --watch",
    "npm:update": "npm-check-updates -i"
  },
  "dependencies": {
    "@discordjs/opus": "^0.9.0",
    "@discordjs/voice": "^0.17.0",
    "boolean": "^3.2.0",
    "chokidar": "^3.6.0",
    "discord.js": "^14.15.3",
    "dotenv": "^16.4.5",
    "format-duration": "^3.0.2",
    "mime": "^4.0.4",
    "music-metadata": "^10.2.0",
    "p-queue": "^8.0.1",
    "redis": "^4.7.0",
    "rimraf": "~6.0",
    "sodium-native": "^4.1.1",
    "tsc-alias": "^1.8.10",
    "tslib": "~2.7",
    "typescript": "~5.4.5",
    "web-streams-polyfill": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "~29.5",
    "@types/node": "~20",
    "@typescript-eslint/eslint-plugin": "~7.6",
    "@typescript-eslint/parser": "~7.6",
    "concurrently": "^8.2.2",
    "discord-api-types": "^0.37.97",
    "eslint": "~8.56",
    "eslint-config-prettier": "~9.1",
    "eslint-plugin-jest": "~28.8",
    "jest": "~29.7",
    "npm-check-updates": "^17.1.0",
    "prettier": "~3.3",
    "ts-api-utils": "~1.3",
    "ts-jest": "~29.2"
  },
  "keywords": [
    "discord",
    "music",
    "bot",
    "local",
    "audio",
    "voice"
  ]
}
